package com.rhs.backend.web;

import com.rhs.backend.dto.ApiResponse;
import com.rhs.backend.dto.RoomDto;
import com.rhs.backend.service.RoomService;
import lombok.RequiredArgsConstructor;
import org.springframework.web.bind.annotation.*;

@RestController
@RequestMapping("/rooms")
@RequiredArgsConstructor
public class RoomController {

  private final RoomService roomService;

  @GetMapping
  public ApiResponse<?> list(){ return ApiResponse.ok(roomService.list()); }

  @PostMapping
  public ApiResponse<RoomDto> create(@RequestBody RoomDto req){
    return ApiResponse.ok("Room created", roomService.create(req));
  }

  @GetMapping("/{id}")
  public ApiResponse<RoomDto> one(@PathVariable String id){
    return ApiResponse.ok(roomService.one(id));
  }

  @PutMapping("/{id}")
  public ApiResponse<RoomDto> update(@PathVariable String id, @RequestBody RoomDto req){
    return ApiResponse.ok("Room updated", roomService.update(id, req));
  }

  @DeleteMapping("/{id}")
  public ApiResponse<?> delete(@PathVariable String id){
    roomService.delete(id);
    return ApiResponse.ok("Room deleted", null);
  }

  @PostMapping("/{id}/assign")
  public ApiResponse<RoomDto> assign(@PathVariable String id){
    return ApiResponse.ok("Student assigned", roomService.assign(id));
  }

  @PostMapping("/{id}/remove")
  public ApiResponse<RoomDto> remove(@PathVariable String id){
    return ApiResponse.ok("Student removed", roomService.remove(id));
  }
}
